<odoo>
    <record id="view_move_form_supplier_xml_import" model="ir.ui.view">
        <field name="name">account.move.form.supplier.xml.import</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_supplier_xml_import_wizard)d"
                        string="Importar XML proveedor"
                        type="action"
                        class="btn-secondary"
                        invisible="move_type not in ('in_invoice', 'in_refund')"/>
            </xpath>
        </field>
    </record>
</odoo>
