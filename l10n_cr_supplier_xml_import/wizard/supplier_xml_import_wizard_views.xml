<odoo>
    <record id="view_supplier_xml_import_wizard_form" model="ir.ui.view">
        <field name="name">supplier.xml.import.wizard.form</field>
        <field name="model">supplier.xml.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar XML de proveedor">
                <group>
                    <field name="xml_file" filename="xml_filename"/>
                    <field name="xml_filename" invisible="1"/>
                    <field name="journal_id"/>
                </group>
                <footer>
                    <button name="action_import_xml" type="object" string="Importar" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_supplier_xml_import_wizard" model="ir.actions.act_window">
        <field name="name">Importar XML proveedor</field>
        <field name="res_model">supplier.xml.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
